@page "/Reportes/Productos"
@using ProyectoFinalAp2.Models;
@using ProyectoFinalAp2.Controllers;

<div class="card">
    <div class="card-header alert-info">
        <label for="FECHA" class="float-right">FECHA: @Fecha </label>

        <img class="align-content-center" src="/../../Resources/Logo.jpg" />

        <h3 class="text-center text-black-50">ButterSoft</h3>
        <h3 class="text-center text-black-50">Reporte de Productos</h3>
    </div>

    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th> ID de Producto </th>
                    <th> Descripcion </th>
                    <th> Cantidad </th>
                    <th> Precio </th>
                </tr>
            </thead>
            <tbody class="table-striped">
                @foreach (var producto in Lista)
                {
                    <tr>
                        <td>@producto.ProductoId</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Cantidad</td>
                        <td>@producto.Precio</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer">
        <label for="GANANCIA">Cantidad Total</label>
        <input @bind="@Total" class="form-control" step="00.2" readonly/>
    </div>
</div>


@code {
    List<Productos> Lista = new List<Productos>();
    String Fecha;
    decimal Total = 0;

    protected override void OnInitialized()
    {
        Fecha = DateTime.Now.ToShortDateString();
        Lista = ProductosBLL.GetList(e => true);
        CalcularTotal();
    }

    private decimal CalcularTotal()
    {
        Total = 0;

        foreach (var producto in Lista)
        {
            Total += producto.Cantidad;
        }
        return Total;
    }
}